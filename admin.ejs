<!DOCTYPE html>
<html>
<head>
  <title>MT5 License Admin</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="p-4">
  <h2>License Management</h2>

  <form action="/admin/add" method="POST" class="row g-3 my-3">
    <div class="col-auto">
      <input name="license_key" placeholder="License Key" required class="form-control">
    </div>
    <div class="col-auto">
      <select name="status" class="form-select">
        <option value="active">Active</option>
        <option value="inactive">Inactive</option>
        <option value="banned">Banned</option>
      </select>
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-primary">Add License</button>
    </div>
  </form>

  <table class="table table-striped">
    <thead>
      <tr><th>ID</th><th>License</th><th>Status</th><th>Action</th></tr>
    </thead>
    <tbody>
      <% licenses.forEach(l => { %>
        <tr>
          <td><%= l.id %></td>
          <td><%= l.license_key %></td>
          <td><%= l.status %></td>
          <td><a class="btn btn-sm btn-danger" href="/admin/delete/<%= l.id %>">Delete</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
